<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Note</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="../styles.css">
</head>
<body>
    <!-- HEADER SECTION -->
    <section class="header">
        <div class="empty"></div>
        <h1>Update Note</h1>
        <div class="logout"><span class="material-symbols-outlined">
            logout
            </span></div>
    </section>

    <!-- FORM SECTION -->
    <section class="new">
        <form action="/edit/<%=id%>?_method=PUT" method="post">
            <h2>Title</h2>
            <input type="text" name="title" placeholder="Title" value="<%=title%>">
            <h2>Note</h2>
         <textarea name="note" id="note" cols="30" rows="10"placeholder="Note"><%=note%></textarea>
            <button type="submit">Update</button>
        </form>

        
    </section>

    <!-- DELETE BUTTON -->
        <form action="/delete/<%=id%>?_method=DELETE" method="post">
        
            <button class="fab" type="submit"><span class="material-symbols-outlined">
                delete
            </span>
            <h3>Delete Note</h3>
        </button>
    </form>

    <script>
         const logout=document.querySelector(".logout")
    logout.addEventListener("click",()=>{
        window.location.href="/logout"
    })
    </script>
</body>
</html>